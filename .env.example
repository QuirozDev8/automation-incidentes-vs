
# Configuración de conexion con Jira
JIRA_BASE_URL=https://miempresa.atlassian.net   # Dominio de la empresa
JIRA_EMAIL=usuario@miempresa.com                # Usuario con permisos en el proyecto
JIRA_API_TOKEN=REPLACE_ME_WITH_API_TOKEN        # Token personal de API de Jira
JIRA_PROJECT_KEYS=PROY1,PROY2                   # Claves de proyectos donde se buscarán issues
PER_ANALYST=3                                   # Cantidad de issues a extraer por usuario
RECIPIENT_EMAIL=destinatario@miempresa.com      # Correo al que llegará el reporte

# Configuración del envío de correos
SENDER_EMAIL=noreply@miempresa.com              # Dirección desde donde se enviarán los correos
SMTP_SERVER=smtp.miempresa.com                  # Servidor SMTP (ej. smtp.gmail.com, smtp.office365.com)
SMTP_PORT=587                                   # Puerto (587 = STARTTLS, 465 = SSL, 25 = sin cifrado)
SMTP_USERNAME=REPLACE_ME_WITH_USERNAME          # Usuario SMTP (normalmente igual al correo)
SMTP_PASSWORD=REPLACE_ME_WITH_PASSWORD          # Contraseña o App Password para SMTP

# Opcional: habilitar dry-run (ejecución sin enviar correos reales 
#  se imprime el resultado   en consola si le pasas true)
DRY_RUN=true
